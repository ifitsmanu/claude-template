      "_comment": "Real-time library documentation"
    },
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp",
      "_comment": "AI-powered search + code context"
    },
    "jina": {
      "type": "http",
      "url": "https://mcp.jina.ai/v1",
      "_comment": "Web reader + SERP results"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-playwright"
      ],
      "_comment": "Browser automation for testing"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "_comment": "Local file operations"
    }
